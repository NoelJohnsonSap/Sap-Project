<mvc:View controllerName="com.applexus.simpleform1.controller.SimpleForm1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
        <content >
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <f:SimpleForm id="SimpleFormDisplay354" editable="true" layout="ResponsiveGridLayout" title="Address" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                    <f:content>
                        <Label id="_IDGenLabel1" text="EMPLOYEE NUMBER" />
                        <Input id="empNoInput" value="{EmployeeNo}" />

                        <Label id="_IDGenLabel2" text="EMPLOYEE NAME" />
                        <Input id="empNameInput" value="{EmployeeName}" />

                        <Label id="_IDGenLabel3" text="EMPLOYEE SALARY" />
                        <Input id="salaryInput" value="{Salary}" />

                        <Label id="_IDGenLabel4" text="CURRENCY" />
                        <Input id="currencyInput" value="{Currency}" />

                    </f:content>
                    <ToggleButton id="_IDGenToggleButton1" text="Next" press="onPress" />
                </f:SimpleForm>
            </VBox>

            <t:Table id="_IDGenTable1" rows="{/Empdetails}">
                <t:columns>
                    <t:Column id="_IDGenColumn1" width="11rem" hAlign="Center">
                        <m:Label id="_IDGenLabel11" text="Employee Id" />
                        <t:template>
                            <m:Text id="t1" wrapping="false" text="{Empid}" />
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn4" width="11rem" hAlign="Center">
                        <m:Label id="_IDGenLabel41" text="Empname" />
                        <t:template>
                            <m:Input id="I1" value="{Empname}" />
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn3" width="11rem" hAlign="Center">
                        <m:Label id="_IDGenLabel31" text="Currencey" />
                        <t:template>
                            <m:Input id="_IDGenInput3" value="{Currencey}" />
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn2" width="11rem" hAlign="Center">
                        <m:Label id="_IDGenLabel21" text="Salary" />
                        <t:template>
                            <m:Text id="_IDGenText2" wrapping="false" text="{Salary}" />
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn5" width="7rem" hAlign="Center">
                        <m:Label id="_IDGenLabel5" text="Smoker" />
                        <t:template>
                            <c:Icon id="_IDGenText3" src="{= ${Smoker}==='Yes' ? 'sap-icon://accept' : 'sap-icon://decline'}"/>
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn6" width="9rem" hAlign="Center">
                        <m:Label id="_IDGenLabel6" text="Gender" />
                        <t:template>
                            <m:Image id="_IDGenLink1" src="{Gender}" width="20%"/>
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn7" width="12rem" hAlign="Center">
                        <m:Label id="_IDGenLabel7" text="Marital Status" />
                        <t:template>
                            <m:ComboBox id="_IDGenComboBox1" value="{Marital Status}">
                                <c:Item id="_IDGenItem1" text="Single"/>
                                <c:Item id="_IDGenItem2" text="Married"/>
                                <c:Item id="_IDGenItem3" text="Widower"/>
                            </m:ComboBox>
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn8" width="12rem" hAlign="Center">
                        <m:Label id="_IDGenLabel8" text="Rating" />
                        <t:template>
                            <m:RatingIndicator id="RI_default" maxValue="5" class="sapUiSmallMarginBottom" value="3" tooltip="Rating" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>

        </content>
    </Page>
</mvc:View>
